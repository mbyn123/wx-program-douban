/* pages/movies/movie-deatil/movie-deatil.wxss */
@import "../star/star-template.wxss";

.movie-details {
  display: flex;
  flex-direction: column;
  position: relative;
}

.movie-details .head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter: blur(20px);
}

.movie-details .head-hover {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 50rpx;
  left: 40rpx;
}

.movie-details .head-hover .head-title {
  color: #fff;
  letter-spacing: 3rpx;
  white-space: nowrap;
}

.movie-details .head-hover .release-information {
  font-size: 30rpx;
  color: #fff;
  margin: 30rpx 0 50rpx 0;
}

.movie-details .head-hover .movie-comments {
  font-size: 28rpx;
}

.movie-details .head-hover .movie-comments .count {
  color: red;
  margin-right: 20rpx;
}

.movie-details .head-hover .movie-comments .comments {
  color: #fff;
  margin-right: 20rpx;
}

.movie-details .movie-img {
  width: 175rpx;
  height: 238rpx;
  position: absolute;
  top: 150rpx;
  right: 30rpx;
}

.movie-details .movie-title {
  font-size: 30rpx;
  letter-spacing: 2rpx;
  font-weight: bold;
  margin: 70rpx 0 30rpx 40rpx;
}

.film-information {
  font-size: 28rpx;
  margin-left: 40rpx;
  margin-bottom: 50rpx;
}

.film-information .row {
  margin-bottom: 5rpx;
  display: flex;
  flex-direction: row;
  white-space: nowrap;
}

.film-information .row .font {
  margin-right: 30rpx;
  color: #666;
}

.movie-summary {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  padding: 40rpx 40rpx 0 40rpx;
  margin-bottom: 40rpx;
  border-top: 1rpx solid #ccc;
}

.movie-summary .title {
  color: #777;
  margin-bottom: 40rpx;
}

.movie-casts {
  font-size: 30rpx;
  border-top: 1rpx solid #ccc;
  padding: 50rpx 0 30rpx 40rpx;
}

.movie-casts .movie-casts-title {
  color: #666;
}

.movie-casts-list {
  white-space: nowrap;
  margin-top: 50rpx;
}

.movie-casts .casts {
  display: inline-flex;
  flex-direction: column;
  margin-right: 40rpx;
  text-align: center;
  width: 170rpx;
  white-space: normal;
}

.casts-img {
  width: 170rpx;
  height: 210rpx;
  margin-bottom: 20rpx;
}

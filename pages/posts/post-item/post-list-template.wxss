.main {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  margin: 10px 0;

}

.main .released-time{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
}

.main .released-time image {
  width: 24px;
  height: 24px;
  /* vertical-align: middle; */
}

.main .released-time text {
  font-size: 30rpx;
  margin-left: 10rpx;
}

.main .title{
  font-size:30rpx;
   font-weight:bold;
   padding: 10px 20rpx;
}

.main .post-img{
  width:100%;
  height:340rpx;
  margin-bottom: 20px;
}

.main .post-content{
  font-size: 26rpx;
  color: #333;
  letter-spacing: 2rpx;
  padding:0 20rpx;
}

.main .post-like{
  display: flex;
  align-items: center;
  padding:10px 20rpx;
}

.main .post-like .post-like-img{
  width:32rpx;
  height:32rpx;
  margin-right: 10rpx;
}

.main .post-like .post-like-font{
  font-size:24rpx;
  margin-right: 40rpx
}
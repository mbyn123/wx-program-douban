/* pages/posts/post-detail/post-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
  position: relative
}

.container .head-img {
  width: 100%;
  height: 400rpx;
}

.container .author-data {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.container .author-data text {
  font-size: 26rpx;
}

.container .author-data .avater {
  width: 32rpx;
  height: 32rpx;
}

.container .author-data .author {
  margin: 0 20rpx;
}

.container .author-data .released-time {
  color: #999;
  font-size: 20rpx;
  margin-right: 20rpx;
}

.container .title {
  padding: 0 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.container .opearte {
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.container .opearte .icon {
  display: flex;
}

.container .opearte .icon image {
  width: 64rpx;
  height: 64rpx;
  margin-left: 10rpx;
}

.container .opearte .wire {
  width: 100%;
  height: 1px;
  background: #ccc;
}

.container .content {
  padding: 20rpx;
  font-size: 24rpx;
  letter-spacing: 2rpx;
}

.container .music-img{
  width:80rpx;
  height:80rpx;
  position: absolute;
  top:15%;
  left:45%
}